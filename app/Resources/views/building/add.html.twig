{% extends 'base.html.twig' %}

{% block body %}
<div class="form">
 <div class="col-sm-4">
{{ form_start(buildingForm) }}
<div class="form-group">
{{ form_label(buildingForm.organisation,null, {'attr': {'class': 'control-label'}}) }}
{{ form_widget(buildingForm.organisation, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
{{ form_label(buildingForm.building_name,null, {'attr': {'class': 'control-label'}}) }}
{{ form_widget(buildingForm.building_name, {'attr': {'class': 'form-control', 'placeholder': 'Organisation domain'}}) }}
</div>
<button type="submit" class="btn btn-primary form-control">Add</button>
{{ form_end(buildingForm) }}
</div>
</div>
{% endblock %}