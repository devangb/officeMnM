{% extends 'base.html.twig' %}

{% block body %}
<div class="form">
{{ form_start(buildingForm) }}
<div class="form-group">
{{ form_label(buildingForm.organisation,null, {'attr': {'class': 'control-label'}}) }}
{{ form_widget(buildingForm.organisation, {'attr': {'class': 'form-control'}}) }}
</div>
<div class="form-group">
{{ form_label(buildingForm.buildingName,null, {'attr': {'class': 'control-label'}}) }}
{{ form_widget(buildingForm.buildingName, {'attr': {'class': 'form-control', 'placeholder': 'Organisation domain'}}) }}
</div>
<button type="submit" class="btn btn-primary form-control">Add</button>
{{ form_end(buildingForm) }}
</div>
{% endblock %}